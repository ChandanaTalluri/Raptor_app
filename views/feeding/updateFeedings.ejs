<!DOCTYPE html>
<html>
<% include ../partials/header %>

<body>
  <% include ../partials/navbar %>


  <div class="container">
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-5">
        <h3>Update Feedings</h3>
        <br>


        <form method="POST" action="/feeding/updateFeedings">
          <input type="hidden" name="id" value="<%=data._id%>" />
            <div class="form-group">
              <label for="dateTime"> dateTime</label>
              <input type="date" class="form-control" id="dateTime" placeholder="Enter dateTime" name="dateTime"
              value="<%=data.dateTime%>" required>
            </div>
            <div class="form-group">
              <label for="animalId">Animal</label>
              <select required class="form-control" name="animalId">
                  <option></option>
                  <% for(var i=0; i<animals.length; i++) { %>
                      <option value="<%=animals[i]._id%>">
                          <%=animals[i].species%>(<%=animals[i].nickName%>)
                      </option>
                  <% } %>
              </select>
            </div>
            <div class="form-group">
              <label for="food">Food</label>
              <select required class="form-control" name="food">
                  <option><%=data.food%></option>
                  <% for(var i=0; i<foods.length; i++) { %>
                      <option value="<%=foods[i].name%>">
                          <%=foods[i].name%>
                      </option>
                  <% } %>
              </select>
            </div>
      
            <div class="form-group">
              <label for="medicine">Medicine (Optional)</label>
              <select class="form-control" name="medicine">
                  <option><%=data.medicine%></option>
                  <% for(var i=0; i<medicines.length; i++) { %>
                      <option value="<%=medicines[i].name%>">
                          <%=medicines[i].name%>
                      </option>
                  <% } %>
              </select>
            </div>
            
            <div class="form-group">
              <label for="goalWeightOfAnimal"> Goal Weight of Animal </label>
              <input type="number" class="form-control" id="goalWeightOfAnimal" step="any" placeholder="Goal Weight of Animal" name="goalWeightOfAnimal"
              value="<%=data.goalWeightOfAnimal%>">
            </div>
            <div class="form-group">
              <label for="actualWeightOfAnimal"> Actual Weight of Animal</label>
              <input type="number" class="form-control" id="actualWeightOfAnimal" step="any" placeholder="Actual Weight of Animal" name="actualWeightOfAnimal"
              value="<%=data.actualWeightOfAnimal%>">
            </div>
            <div class="form-group">
              <label for="amountOfFoodFed"> Amount of Food Fed</label>
              <input type="number" class="form-control" id="amountOfFoodFed" step="any" placeholder="Amount of Food Fed" name="amountOfFoodFed"
              value="<%=data.amountOfFoodFed%>">
            </div>
            <div class="form-group">
              <label for="leftoverFood"> Left Over Food</label>
              <input type="number"  class="form-control" id="leftoverFood" step="any" placeholder="leftoverFood" name="leftoverFood"
              value="<%=data.leftoverFood%>">
            </div>
            <div class="form-group">
              <label for="comments"> Comments</label>
              <input type="text" class="form-control" id="comments" placeholder="comments" name="comments" 
              value="<%=data.comments%>">
            </div>
            <div class="form-group">
              <label for="weatherConditions"> Weather Conditions</label>
              
              <select class="form-control" name="weatherConditions">
                <option> <%=data.weatherConditions%></option>
                <option>Sunny - Cold</option>
                <option>Cloudy - Cold</option>
                <option>Precipitation - Cold</option>
                <option>Sunny - Mild</option>
                <option>Cloudy - Mild</option>
                <option>Precipitation - Mild</option>
                <option>Sunny - Hot</option>
                <option>Cloudy - Hot</option>
                <option>Precipitation - Hot</option>
            </select>
            </div>
            
            <div class="form-group">
              <label for="keeperName"> keeper Name</label>
              <input type="text" class="form-control" id="keeperName" placeholder="Keeper name" name="keeperName"
              value="<%=data.keeperName%>">
            </div>
              
          <br>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>

      </div>
    </div>
  </div>
  <% include ../partials/scripts%>
</body>

</html>