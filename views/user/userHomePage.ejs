<!DOCTYPE html>
<html>
<% include ../partials/header %>

<body>
    <% include ../partials/navbar %>

    <div class="container">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-2">
                <h2><strong>User</strong></h2>
            </div>
            <div class="col-sm-4"></div>
            <div class="col-sm-3">
                <a href="/user/addUser" class="btn btn-primary"> Add User</a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-8">
                <table id="user" class="table table-bordered table-striped table-hover  table-responsive-md">

                    <thead>
                        <tr>
                            <td><strong>Email</strong></td>
                            <td><strong>First Name</strong></td>
                            <td><strong>Last Name</strong></td>
                            <td><strong>Role</strong></td>
                            <td><strong>Edit</strong></td>
                            <td><strong>Delete</strong></td>

                        </tr>
                    </thead>

                    <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                        <td><%=data[i].email%></td>
                        <td><%=data[i].firstName%></td>
                        <td><%=data[i].lastName%></td>
                        <td><%=data[i].role%></td>

                        <td><a href="/user/updateUser?id=<%= data[i]._id %>"><img
                                    src="https://img.icons8.com/android/24/000000/edit.png" /></a> </td>

                        <td><a href="/user/deleteUser?id=<%= data[i]._id %>"
                                onclick="return confirm('Are you sure you want to delete this?')"><img
                                    src="https://img.icons8.com/fluent-systems-filled/24/000000/trash.png" /></a></td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>

    </div>

    <% include ../partials/scripts%>
    
    <style>
        #medicines {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #medicines thead {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            font-style: normal;
            background-color: rgb(131, 253, 131);
            color: black;
        }
    </style>

</body>

</html>