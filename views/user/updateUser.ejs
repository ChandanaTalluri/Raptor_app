<!DOCTYPE html>
<html>
<% include ../partials/header %>

<body>
  <% include ../partials/navbar %>


  <div class="container">
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-5">
        <h3>Update User</h3>
        <br>
        <% if (errormessage.length > 0) { %>
          <div class="alert alert-danger"><%= errormessage %></div>
          <% } %>

        <form method="POST" action="/user/updateUser">
          <input type="hidden" name="id" value="<%=data._id%>" />

          <div class="form-group">
            <label for="emial">Email</label>
            <input type="text" class="form-control" id="email" placeholder="Enter Email ID" name="email"
              value="<%= data.email %>">
          </div>

          <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" placeholder="First Name" name="firstName"
              value="<%= data.firstName %>">
          </div>

          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" placeholder="Last Name" name="lastName"
              value="<%= data.lastName %>">
          </div>

          <div class="form-group">
            <label for="role">Role</label>
            <select class="custom-select" name="role" required>
              <option><%= data.role %></option>
              <option value="admin">admin</option>
              <option value="user">user</option>

            </select>

          </div>

          <div class="form-group">
            <label for="newPassword">New Password (Note: Enter to change password)</label>
            <input type="password" class="form-control" id="newPassword" placeholder="New password" name="newPassword"
           >
          </div>


          <br>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <br><br>

      </div>
      
    </div>
  </div>
  <% include ../partials/scripts%>
</body>

</html>